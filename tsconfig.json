{
    "compilerOptions": {
        "target": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "module": "esnext",
        "moduleResolution": "node",
        "rootDirs": ["scripts"],
        "outDir": "./dist-scripts",
        "baseUrl": "./",
        "incremental": true
    },
    "include": ["./scripts/*"]
}
